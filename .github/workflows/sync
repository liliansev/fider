name: Sync Fork

on:
  schedule:
    - cron: '0 0 * * *'  # tous les jours Ã  minuit
  workflow_dispatch:  # ou manuellement

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
      - name: Sync upstream
        run: |
          git remote add upstream https://github.com/getfider/fider.git
          git fetch upstream
          git checkout main
          git merge upstream/main --no-edit
          git push
